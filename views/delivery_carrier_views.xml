<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_delivery_carrier_form_mercury_mes" model="ir.ui.view">
            <field name="name">delivery.carrier.form.mercury.mes</field>
            <field name="model">delivery.carrier</field>
            <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
            <field name="arch" type="xml">
                <!-- Target the sheet element inside the form -->
                <xpath expr="//sheet" position="inside">
                    <!-- Add the Mercury MES group, make it visible only when delivery_type is 'mercury_mes' -->
                    <group name="mercury_mes_config" string="Mercury MES Configuration" attrs="{'invisible': [('delivery_type', '!=', 'mercury_mes')]}">
                        <field name="mercury_mes_email" />
                        <field name="mercury_mes_private_key" password="True"/>
                        <field name="mercury_mes_default_international_service" />
                        <field name="mercury_mes_default_domestic_service" />
                        <!-- <field name="mercury_mes_is_test" /> -->
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>